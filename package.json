{
  "name": "tanuri",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "type": "module",
  "scripts": {
    "dev:web": "bun run --cwd apps/tanuri-company-web dev",
    "dev:mobile": "bun run --cwd apps/tanuri-consumer-mobile start",
    "dev:backend": "source backend/venv/bin/activate && python backend/manage.py runserver",
    "dev": "bun run -p dev:web dev:mobile dev:backend",
    "scaffold": "plop",
    "lint": "biome check",
    "format": "biome format",
    "check": "biome check",
    "clean": "biome check --write",
    "doctor": "bunx tsc -p tsconfig.base.json --noEmit",
    "lefthook": "lefthook",
    "postinstall": "lefthook install"
  },
  "dependencies": {
    "dayjs": "^1.11.18",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/pluralize": "^0.0.33",
    "@types/react": "~19.0.10",
    "@types/react-dom": "19.0.1",
    "lefthook": "^1.12.3",
    "plop": "^4.0.1",
    "pluralize": "^8.0.0",
    "typescript": "5.8.3"
  }
}
